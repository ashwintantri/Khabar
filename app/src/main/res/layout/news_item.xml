<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/news_card_id"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/image_id" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headlines_id"
        android:textSize="20sp"
        android:text="Headlines"
        android:textColor="#000"
       android:text="hellosimsr"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="10dp"
        android:layout_below="@+id/image_id"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="lorem ipsum lorem ipsum"
        android:paddingLeft="14dp"
        android:layout_below="@+id/headlines_id"
        android:paddingBottom="14dp"
        android:paddingRight="14dp"
        android:maxLines="6"
        android:ellipsize="end"
        android:textSize="15sp"
        android:id="@+id/news_details_id"/>
        <Button
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_margin="5dp"
            android:id="@+id/share_id"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/share_button"/>
        <Button
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_margin="5dp"
            android:id="@+id/bookmark_id"
            android:layout_below="@+id/share_id"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_bookmark_black_24dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
